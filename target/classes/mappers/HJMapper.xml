	<select id="pslist" resultType="com.wolclass.domain.PopularSearchVO">
	<![CDATA[  
		select ps_text, count(*) 
		from wc_popular_search
		where datediff(now(), ps_regdate) < 1
		group by ps_text
		order by count(*) desc, max(ps_regdate) desc
		limit 10
